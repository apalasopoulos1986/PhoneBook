


@model IEnumerable<PhoneBook.Data.Entities.Contact>

@{
    ViewBag.Title = "Index";
}

<h2>Επαφές και τοποθεσίες</h2>

<p>
    @Html.ActionLink("Καταχώρησε μια νέα επαφή", "CreateLocation")
</p>
<p>
    @Html.ActionLink("Επιστροφή στην αρχική", "Index", "Home")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FixedPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobilePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location.AddressName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location.No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location.Area)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location.City)
        </th>


    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FixedPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobilePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.AddressName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.City)
            </td>

        </tr>
    }

</table>


